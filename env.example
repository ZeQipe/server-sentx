# =================================
# Django Settings
# =================================
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1,api.sentx.ai

# =================================
# Database
# =================================
# For SQLite (development):
# Leave DATABASE_URL empty or comment it out

# For PostgreSQL (production):
# DATABASE_URL=postgresql://username:password@localhost:5432/sentx_db

# =================================
# SentX API (LLM Provider)
# =================================
# Main API key for SentX
SENTX_SECRET_KEY=your-sentx-api-key-here

# SentX API base URL
OPENAI_BASE_URL=https://s-api-sv-0028.ngrok.app/v1

# Default model to use
OPENAI_DEFAULT_MODEL=sentx_4.0

# Alternative: OpenAI API key (if not using SentX)
OPENAI_API_KEY=

# =================================
# Stripe Payment Settings
# =================================
STRIPE_PUBLISHABLE_KEY=pk_test_your_test_key
STRIPE_API_KEY=sk_test_your_test_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# =================================
# Google OAuth2
# =================================
GOOGLE_OAUTH2_KEY=your-google-client-id.apps.googleusercontent.com
GOOGLE_OAUTH2_SECRET=your-google-client-secret

# =================================
# Twitter OAuth2
# =================================
TWITTER_OAUTH2_KEY=your-twitter-client-id
TWITTER_OAUTH2_SECRET=your-twitter-client-secret

# =================================
# Social Auth Redirect URLs
# =================================
# Production:
# SOCIAL_AUTH_LOGIN_REDIRECT_URL=https://sentx.ai/auth/google/callback
# SOCIAL_AUTH_LOGIN_ERROR_URL=https://sentx.ai/auth/error
# SOCIAL_AUTH_GOOGLE_OAUTH2_REDIRECT_URI=https://sentx.ai/auth/google/callback

# Development:
SOCIAL_AUTH_LOGIN_REDIRECT_URL=http://localhost:5173/auth/google/callback
SOCIAL_AUTH_LOGIN_ERROR_URL=http://localhost:5173/auth/error
SOCIAL_AUTH_GOOGLE_OAUTH2_REDIRECT_URI=http://localhost:5173/auth/google/callback

# =================================
# Email Settings (Yandex SMTP)
# =================================
EMAIL_HOST_USER=develop@kuki.agency
EMAIL_HOST_PASSWORD=your-email-password

# =================================
# Security
# =================================
# Secret key for ID obfuscation (if used)
ABFUSCATOR_ID_KEY=super_secret_key_change_in_production

# =================================
# CORS Settings
# =================================
# Comma-separated list of allowed origins
# CORS_ALLOWED_ORIGINS=https://sentx.ai,http://localhost:5173

# =================================
# Streaming Settings
# =================================
# Размер чанка для стриминга (в символах)
STREAMING_CHUNK_SIZE=4

# Задержка между чанками (в секундах)
# 0 = без задержки, 0.05 = 50ms задержка
STREAMING_CHUNK_DELAY=0

# =================================
# Usage Limits
# =================================
# Лимит запросов для анонимных пользователей (в день)
ANONYMOUS_DAILY_LIMIT=10

# Лимит запросов для бесплатных пользователей (в день)
FREE_USER_DAILY_LIMIT=50

# Лимит запросов для платных пользователей (в день)
PAID_USER_DAILY_LIMIT=1000

# Количество сообщений в истории чата
CHAT_HISTORY_LIMIT=100

